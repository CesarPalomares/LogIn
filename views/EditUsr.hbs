<div style="margin-top: auto;">
    <form action="/Guardar" method="post">
        <input type="text" name="usuario" value="{{nombre}}"><br>
        <input type="password" name="p1" value="{{password}}"><br>
        <input type="password" name="p2" value="{{password}}"><br>
        {{#if superuser}}

        {{#if adm}}
        <label><input type="radio" name="privilegios" value="Admin" checked="checked">Administración</label><br>
